---
import Layout from "../layouts/Layout.astro";
import { config } from "../utils/config";
import { projects } from "../utils/projects";
import { skills, achievements } from "../utils/skills";

const pageTitle = config.name + " | " + config.title;
const pageDescription = config.description;
const OGImage = {
  alt: config.name + " Portfolio",
  url: config.resumeDownloadUrl
};
---

<Layout pageTitle={pageTitle} description={pageDescription} ogimage={OGImage}>
  <main class="main-content">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container hero-container">
        <div class="hero-content">
          <div class="hero-text">
            <h1 class="hero-title glowing-text">{config.name}</h1>
            <p class="hero-subtitle">{config.title}</p>
            <p class="hero-description">{config.description}</p>
            
            <!-- Contact Buttons -->
            <div class="contact-buttons">
              <a href={`mailto:${config.email}`} class="btn btn-primary">Email</a>
              <a href={config.linkedIn} target="_blank" rel="noopener noreferrer" class="btn btn-primary">LinkedIn</a>
              <a href={config.github} target="_blank" rel="noopener noreferrer" class="btn btn-primary">GitHub</a>
              <a href={config.resumeDownloadUrl} target="_blank" rel="noopener noreferrer" class="btn btn-primary">Resume</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="skills-section">
      <div class="container">
        <h2 class="section-title">Technical Skills</h2>
        <div class="skills-grid">
          {skills.map((skill) => (
            <div class="skill-card">
              <span class="skill-name">{skill}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="projects-section">
      <div class="container">
        <h2 class="section-title">Featured Projects</h2>
        <div class="projects-grid">
          {projects.map((project) => (
            <div class="project-card">
              <div class="project-header">
                <h3 class="project-title">{project.title}</h3>
              </div>
              <p class="project-description">{project.description}</p>
              {project.technologies && (
                <div class="project-tech">
                  {project.technologies.map((tech) => (
                    <span class="tech-badge">{tech}</span>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Achievements Section -->
    <section class="achievements-section">
      <div class="container">
        <h2 class="section-title">Achievements & Highlights</h2>
        <div class="achievements-grid">
          {achievements.map((achievement) => (
            <div class="achievement-card">
              <p class="achievement-text">{achievement}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <style>
    :root {
      --primary-color: #00ffcc;
      --secondary-color: #00d4ff;
      --dark-bg: #0a0e27;
      --card-bg: #1a1f3a;
      --text-light: #e0e0e0;
      --text-muted: #999;
      --border-color: rgba(0, 255, 204, 0.2);
      --glow-color: rgba(0, 255, 204, 0.4);
    }

    .main-content {
      background: linear-gradient(135deg, var(--dark-bg) 0%, #0f1735 100%);
      color: var(--text-light);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    /* Hero Section */
    .hero-section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px 20px;
      position: relative;
      overflow: hidden;
    }

    .hero-section::before {
      content: '';
      position: absolute;
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(0, 255, 204, 0.1) 0%, transparent 70%);
      border-radius: 50%;
      top: -100px;
      right: -100px;
      animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(30px);
      }
    }

    .hero-container {
      position: relative;
      z-index: 1;
    }

    .hero-title {
      font-size: 4rem;
      font-weight: 800;
      margin-bottom: 10px;
      line-height: 1.1;
      letter-spacing: -0.02em;
    }

    .glowing-text {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: glow-pulse 3s ease-in-out infinite;
    }

    @keyframes glow-pulse {
      0%, 100% {
        filter: drop-shadow(0 0 10px rgba(0, 255, 204, 0.3));
      }
      50% {
        filter: drop-shadow(0 0 20px rgba(0, 255, 204, 0.6));
      }
    }

    .hero-subtitle {
      font-size: 1.8rem;
      color: var(--primary-color);
      margin-bottom: 15px;
      font-weight: 600;
    }

    .hero-description {
      font-size: 1.1rem;
      color: var(--text-muted);
      max-width: 600px;
      margin-bottom: 40px;
      line-height: 1.6;
    }

    .contact-buttons {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }

    .btn {
      padding: 12px 24px;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
      transition: all 0.3s ease;
      border: 1px solid var(--primary-color);
      background: transparent;
      color: var(--primary-color);
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .btn-primary:hover {
      background: var(--primary-color);
      color: var(--dark-bg);
      box-shadow: 0 0 20px rgba(0, 255, 204, 0.4);
      transform: translateY(-2px);
    }

    /* Section Styles */
    section {
      padding: 80px 20px;
      border-top: 1px solid var(--border-color);
    }

    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 50px;
      text-align: center;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    /* Skills Section */
    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }

    .skill-card {
      background: linear-gradient(135deg, var(--card-bg), rgba(0, 255, 204, 0.05));
      border: 1px solid var(--border-color);
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .skill-card:hover {
      border-color: var(--primary-color);
      box-shadow: 0 0 20px rgba(0, 255, 204, 0.2);
      transform: translateY(-5px);
      background: linear-gradient(135deg, rgba(0, 255, 204, 0.1), rgba(0, 212, 255, 0.05));
    }

    .skill-name {
      font-weight: 600;
      color: var(--text-light);
      display: block;
    }

    /* Projects Section */
    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 30px;
    }

    .project-card {
      background: linear-gradient(135deg, var(--card-bg), rgba(0, 255, 204, 0.05));
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 30px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .project-card::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -50%;
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, rgba(0, 255, 204, 0.1), transparent 70%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .project-card:hover {
      border-color: var(--primary-color);
      box-shadow: 0 10px 40px rgba(0, 255, 204, 0.15);
      transform: translateY(-5px);
    }

    .project-card:hover::before {
      opacity: 1;
    }

    .project-header {
      margin-bottom: 15px;
    }

    .project-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary-color);
      margin: 0;
      position: relative;
      z-index: 1;
    }

    .project-description {
      color: var(--text-muted);
      line-height: 1.6;
      margin-bottom: 15px;
      position: relative;
      z-index: 1;
    }

    .project-tech {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      position: relative;
      z-index: 1;
    }

    .tech-badge {
      background: rgba(0, 255, 204, 0.1);
      border: 1px solid rgba(0, 255, 204, 0.3);
      color: var(--primary-color);
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .tech-badge:hover {
      background: var(--primary-color);
      color: var(--dark-bg);
    }

    /* Achievements Section */
    .achievements-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .achievement-card {
      background: linear-gradient(135deg, rgba(0, 255, 204, 0.05), rgba(0, 212, 255, 0.05));
      border: 1px solid var(--border-color);
      padding: 25px;
      border-radius: 10px;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
    }

    .achievement-card:hover {
      border-color: var(--primary-color);
      box-shadow: 0 5px 20px rgba(0, 255, 204, 0.1);
      transform: translateX(5px);
    }

    .achievement-text {
      color: var(--text-light);
      line-height: 1.6;
      margin: 0;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .hero-title {
        font-size: 2.5rem;
      }

      .hero-subtitle {
        font-size: 1.3rem;
      }

      .section-title {
        font-size: 1.8rem;
      }

      .skills-grid {
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      }

      .projects-grid {
        grid-template-columns: 1fr;
      }

      .contact-buttons {
        flex-direction: column;
      }

      .btn {
        width: 100%;
      }
    }
  </style>
</Layout>
