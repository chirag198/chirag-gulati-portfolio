---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/portfolio/Hero.astro";
import Skills from "../components/portfolio/Skills.astro";
import Experience from "../components/portfolio/Experience.astro";
import Projects from "../components/portfolio/Projects.astro";
import Achievements from "../components/portfolio/Achievements.astro";
import { config } from "../utils/config";

const pageTitle = config.name + " | " + config.title;
const pageDescription = config.description;
const OGImage = {
  alt: config.name + " Portfolio",
  url: config.resumeDownloadUrl
};
---

<Layout pageTitle={pageTitle} description={pageDescription} ogimage={OGImage}>
  <main class="main-content">
    <Hero />
    <Skills />
    <Experience />
    <Projects />
    <Achievements />
  </main>

  <style>
    :root {
      --primary-color: #00ffcc;
      --secondary-color: #00d4ff;
      --dark-bg: #0a0e27;
      --text-light: #e0e0e0;
    }

    .main-content {
      background: linear-gradient(135deg, var(--dark-bg) 0%, #0f1735 100%);
      color: var(--text-light);
    }
  </style>
</Layout>
